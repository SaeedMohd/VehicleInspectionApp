<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/vinEditText"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:hint="VIN"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/orTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/vinEditText"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/yearEditText"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/orTextView"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:hint="Year"
        android:background="@drawable/edit_text"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/makeEditText"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/yearEditText"
        android:layout_marginTop="10dp"
        android:hint="Make"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text"
        android:textSize="15sp" />

    

    <EditText
        android:id="@+id/modelEditText"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/makeEditText"
        android:layout_marginTop="10dp"
        android:hint="Model"
        android:maxLines="1"
        android:background="@drawable/edit_text"
        android:paddingLeft="15dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/mileageEditText"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/modelEditText"
        android:layout_marginTop="10dp"
        android:hint="Mileage"
        android:maxLines="1"
        android:inputType="number"
        android:background="@drawable/edit_text"
        android:paddingLeft="15dp"
        android:textSize="15sp" />

    <Button
        android:id= "@+id/setVinOkButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mileageEditText"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:layout_margin="10dp"
        android:background="@drawable/button_black_background"
        />
    
</RelativeLayout>