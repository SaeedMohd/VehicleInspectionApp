<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <!--<item name="android:colorPressedHighlight">#691A40</item>-->
        <!--<item name="android:colorLongPressedHighlight">#691A40</item>-->
        <!--<item name="android:colorActivatedHighlight">#691A40</item>-->
        <item name="android:actionBarStyle">@style/myActionBar</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <!--<item name="android:activatedBackgroundIndicator">@drawable/list_item_selector</item>-->
        <!--<item name="android:listChoiceIndicatorMultiple">@drawable/multi_select_item_selector</item>-->
    </style>


    <style name="myActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/mainColor</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->
        <item name="android:actionMenuTextColor">#FFFFFF</item>
    </style>

    <!--&lt;!&ndash; ActionBar styles &ndash;&gt;-->
    <!--<style name="MyActionBar"-->
    <!--parent="@android:style/Widget.Holo.Light.ActionBar">-->
    <!--<item name="android:titleTextStyle">@style/MyActionBarTitleText</item>-->
    <!--<item name="android:showAsAction">always|withText</item>-->
    <!--<item name="android:actionMenuTextColor">#FFFFFF</item>-->
    <!--</style>-->



    <style name="MyActionBarTitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>



    <style name="myAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="colorPrimary">@color/headerColor</item>
            <item name="colorPrimaryDark">@color/headerColor</item>
            <item name="android:statusBarColor">@color/headerColor</item>
        <item name="actionMenuTextColor">@android:color/white</item>
            <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="android:colorPressedHighlight">#691A40</item>-->
        <!--<item name="android:colorLongPressedHighlight">#691A40</item>-->
        <!--<item name="android:colorActivatedHighlight">#691A40</item>-->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
            <item name="spinBars">true</item>
            <item name="color">@android:color/white</item>
    </style>

    <style name="Widget.MyApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/mainColor</item>
        <item name="theme">@style/ThemeOverlay.MyApp.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
