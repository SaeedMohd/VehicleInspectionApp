<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/light_gray"
        tools:context=".fragments.FragmentAARAVPayments">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/facPayments"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="left"
                android:layout_weight="8"
                android:text="Payments"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                />
        </LinearLayout>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facPayments"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:background="@color/white"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:textColor="#827908"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Showing 1-1 of 1 Results"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:textColor="#800000"
                    />
                <TableLayout
                    android:id="@+id/InvoiceResultsTbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="middle|beginning|end"
                    android:divider="@drawable/divider_table_layout"
                    >
                    <TableRow
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invoice #"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Printed Record"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Month"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Due Date"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invoice Amount"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Month"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Amount"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Amount Due"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payments"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:textColor="#827908"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Showing 1-1 of 1 Results"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:textColor="#800000"
                    />
                <TableLayout
                    android:id="@+id/PaymentsResultsTbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="middle|beginning|end"
                    android:divider="@drawable/divider_table_layout"
                    >
                    <TableRow
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment ID"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State Revenue Account"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Check"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaction Date"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tracking Number"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Type"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                    </TableRow>
                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Payment"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:textColor="#827908"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Payment"
                    android:id="@+id/addNewBtn"
                    />



                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Invoice Number:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/invNoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Payment Type:"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            />
                        <Spinner
                            android:id="@+id/newPaymentTypeSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ems="8"
                            android:layout_column="1"
                            android:entries="@array/contractTypesEntries"
                            />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Payment ID:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/newPaymentIDText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Date of Check:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <Button
                            android:id="@+id/newCheckDateBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_column="1"
                            android:background="@color/transparent"
                            android:text="SELECT DATE"
                            android:textColor="@color/blue"
                            android:textSize="12dp" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Transaction/Receipt Date:*"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            />

                        <EditText
                            android:id="@+id/newTrxDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Transaction/Receipt Number:"
                            android:layout_column="4"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newTrxNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="5"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="State Revenue Account #:"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            />

                        <EditText
                            android:id="@+id/newStateRevAccountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:id="@+id/newACSCheck"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:layout_column="4"
                            android:text="Hasc ACH Issues"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Comments:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newCommentsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:lines="5"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Last Updated:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newLastUpdatedText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Updated By:"
                            android:layout_column="4"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newUpdatedByText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="5"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>

                </TableLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message: Please select or add a payment"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:textColor="#800000"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/InsuranceExpDatell"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save" />

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>