<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/light_gray"
        tools:context=".fragments.FragmentAARAVPayments">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice"
                    android:textColor="@color/mainColor"
                    android:textSize="18sp" />


                <TableLayout
                    android:id="@+id/InvoiceResultsTbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:stretchColumns="*">
                    >
                    <TableRow android:background="@color/mainColor">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invoice #"
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Printed Record"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Month"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Due Date"
                            android:textStyle="bold"
                            android:layout_column="3"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invoice Amount"
                            android:layout_column="4"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Month"
                            android:layout_column="5"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Amount"
                            android:layout_column="6"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Amount Due"
                            android:layout_column="7"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                    </TableRow>
                </TableLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payments"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/mainColor"
                        />

                    <Button
                        android:id="@+id/addNewPaymentBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/green_background_button"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="+ add payment"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <TableLayout
                    android:id="@+id/paymentsResultsTbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:stretchColumns="*">
                    <TableRow android:background="@color/mainColor">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment ID"
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State Revenue Account"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Check"
                            android:layout_column="2"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount"
                            android:layout_column="3"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaction Date"
                            android:layout_column="4"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tracking Number"
                            android:layout_column="5"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Type"
                            android:layout_column="6"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            />
                    </TableRow>
                </TableLayout>







                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:orientation="horizontal">-->

                <!--<Button-->
                    <!--android:id="@+id/saveButton"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Save" />-->

                <!--<Button-->
                    <!--android:id="@+id/cancelButton"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Cancel" />-->
            <!--</LinearLayout>-->
            </LinearLayout>

        </ScrollView>

    <View
        android:id="@+id/alphaBackgroundForDialogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/mainColor"
        android:visibility="gone"
        android:alpha="0.8"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cardCornerRadius="5dp"
        android:id="@+id/addNewPaymentDialog"
        app:cardElevation="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Add New Payment"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"
                    android:ems="12"
                    android:layout_column="0"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:text="SUBMIT"
                    android:id="@+id/paymentSubmitButton"
                    android:textColor="@color/white"
                    android:ems="12"
                    android:layout_column="1"
                    android:background="@drawable/green_background_button"
                    android:layout_gravity="top|right"/>
                <ImageButton
                    android:layout_marginTop="25dp"
                    android:background="@drawable/textview_background"
                    android:id="@+id/exitDialogeBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/exit"
                    android:layout_gravity="top|right"
                    android:layout_column="2"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="0"
                    android:background="@android:color/darker_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="1"
                    android:background="@android:color/darker_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="2"
                    android:background="@android:color/darker_gray"/>
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Invoice Number*"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Type*"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:layout_column="1"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/newInvNoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:background="@drawable/textview_background"
                    />
                <Spinner
                    android:id="@+id/newPaymentTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:entries="@array/contractTypesEntries"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment ID*"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Check"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:layout_column="1"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/newPaymentIDText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:background="@drawable/textview_background"
                    />
                <Button
                    android:id="@+id/newCheckDateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:text="SELECT DATE"
                    android:ems="12"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction/Receipt Date*"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction/Receipt Number"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:layout_column="1"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/newTrxDateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:text="SELECT DATE"
                    android:ems="12"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/newTrxNumberText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:background="@drawable/textview_background"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State Revenue Account #"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/newStateRevAccountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:background="@drawable/textview_background"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/newACSCheck"
                    android:layout_column="1"
                    android:layout_marginLeft="10dp"
                    android:text="Hasc ACH Issues"
                    />
            </TableRow>


            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
            </TableRow>
            <EditText
                android:id="@+id/newCommentsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:ems="12"
                android:lines="5"
                android:background="@drawable/textview_background"
                android:layout_column="0"
                />
        </TableLayout>
    </android.support.v7.widget.CardView>

    </RelativeLayout>