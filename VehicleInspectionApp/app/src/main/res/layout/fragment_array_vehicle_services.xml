<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/titleTextView"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:fillViewport="true"
    android:paddingBottom="10dp"
    android:layout_margin="10dp"
    android:paddingTop="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.inspection.fragments.FragmentARRAVFacility">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <android.support.v7.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/firstRowColor"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
            android:id="@+id/subTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Automobile"
            android:textStyle="bold"
            android:textColor="@color/mainColor"
            android:textSize="22sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"

            />



        <com.inspection.Utils.ExpandableHeightGridView
            android:layout_margin="20dp"
            android:id="@+id/vehicleServicesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_margin="3dp"
            android:background="@color/light_gray" />


    <android.support.v7.widget.CardView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/firstRowColor"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
            android:id="@+id/subTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Auto Body"
            android:textStyle="bold"
            android:textColor="@color/mainColor"
            android:textSize="22sp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"

            />

        <com.inspection.Utils.ExpandableHeightGridView
            android:id="@+id/autoBodyServicesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp" />


    </LinearLayout>
    </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_margin="3dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/subTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Marine"
            android:textStyle="bold"
            android:textColor="@color/mainColor"
            android:textSize="22sp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"

            />

        <com.inspection.Utils.ExpandableHeightGridView
            android:id="@+id/MarineServicesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_margin="3dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/subTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RV"
            android:textStyle="bold"

            android:textColor="@color/mainColor"
            android:textSize="22sp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"

            />

        <com.inspection.Utils.ExpandableHeightGridView
            android:id="@+id/RecreationalServicesListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_margin="3dp"
            android:background="@color/light_gray" />

        <!--<ProgressBar-->
        <!--android:id="@+id/progressbarVehicleServices"-->
