<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_gray"
    tools:context="com.inspection.fragments.FragmentARRAVFacility">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Affiliations"
        android:textStyle="bold"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView"
            android:background="@color/white"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progressbarAff"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:max="100"
                    android:backgroundTint="@color/white"
                    android:indeterminateTint="#1a09d6"
                    android:layout_marginTop="-7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:id="@+id/connumberll">
                <TextView
                    android:id="@+id/program_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Affliation Type: "
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/affiliations_textviewVal"
                    android:layout_toRightOf="@id/contract_number_textview"
                    android:layout_width="0dp"
                    android:text="Select Affliation"
                    android:textColor="@color/blue_krayola"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/affliationdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_below="@id/connumberll"
                >
                <TextView
                    android:id="@+id/afDetails_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Affliation Details: "
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/afDetails_textviewVal"
                    android:layout_toRightOf="@id/contract_number_textview"
                    android:layout_width="0dp"
                    android:text="Select Affliation"
                    android:textColor="@color/blue_krayola"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@id/affliationdetails"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/contypell">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Effective Date: "
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/afDtlseffective_date_textviewVal"
                    android:layout_below="@id/connumberll"
                    android:layout_width="0dp"
                    android:text="select date"
                    android:textColor="@color/blue_krayola"
                    android:background="@null"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@id/contypell"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/officell">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contypell"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Expiration Date: "
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/afDtlsexpiration_date_textviewVal"
                    android:layout_toRightOf="@id/office_textview"
                    android:layout_below="@id/contypell"
                    android:layout_width="0dp"
                    android:text="Select Date"
                    android:textColor="@color/blue_krayola"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@id/officell"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:id="@+id/AssignedToll">
                <TextView
                    android:id="@+id/comments_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/officell"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Comments: "
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/affcomments_editTextVal"
                android:layout_marginTop="5dp"
                android:layout_below="@id/AssignedToll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_solid_border"
                android:maxEms="250"
                android:lines="3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affcomments_editTextVal"
                android:id="@+id/affbtnslayout"
                android:weightSum="3"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/affaddBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Add"/>
                <Button
                    android:id="@+id/affeditBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Modify"/>
                <Button
                    android:id="@+id/affdeleteBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Delete"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/affbtnslayout"
                android:background="@drawable/frame_solid_border"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:id="@+id/affListLL"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
</RelativeLayout>