<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/light_gray"
tools:context=".fragments.FragmentAARAVComments">


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/facComments"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="10dp"
    android:paddingTop="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textColor="@color/mainColor"
            android:textSize="18sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topTable"
            >

            <TableRow>r
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Category:"
                    android:textStyle="bold"
                    android:layout_column="0"
                    android:ems="8"
                    android:layout_margin="5dp"
                    />
                <Spinner
                    android:id="@+id/catSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="8"
                    android:layout_column="1"
                    android:entries="@array/contractTypesEntries"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Updated By:"
                    android:ems="8"
                    android:textStyle="bold"
                    android:layout_column="2"
                    />
                <EditText
                    android:id="@+id/updatedByText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="8"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:layout_column="3"
                    android:background="@drawable/textview_background"
                    android:textStyle="bold"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_margin="5dp"
                    android:text="Start Date:"
                    android:layout_column="0"
                    android:textStyle="bold"
                    />

                <Button
                    android:id="@+id/startDateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_column="1"
                    android:background="@color/transparent"
                    android:text="SELECT DATE"
                    android:ems="8"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="End Date:"
                    android:textStyle="bold"
                    android:layout_column="2"
                    />

                <Button
                    android:id="@+id/endDateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_column="3"
                    android:background="@color/transparent"
                    android:text="SELECT DATE"
                    android:ems="8"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_margin="5dp"
                android:text="Comments:"
                android:layout_column="0"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/commentsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:ems="8"
                android:lines="3"
                android:layout_column="1"
                android:background="@drawable/textview_background"
                android:textStyle="bold"
                />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/topTable"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/green_background_button"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:text="Search" />
            <Button
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/green_background_button"
                android:layout_toRightOf="@id/saveButton"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/white"
                android:text="Clear" />
            <Button
                android:id="@+id/addNewCommentBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/green_background_button"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="+ add Comment"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TableLayout
            android:id="@+id/commentsResultsTbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:stretchColumns="*">
            <TableRow android:background="@color/mainColor">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated By"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated Date"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
            </TableRow>
        </TableLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:orientation="horizontal">-->

            <!--<Button-->
                <!--android:id="@+id/saveButton"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Save" />-->

            <!--<Button-->
                <!--android:id="@+id/cancelButton"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Cancel" />-->
        <!--</LinearLayout>-->
    </LinearLayout>

</ScrollView>

    <View
        android:id="@+id/alphaBackgroundForDialogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/mainColor"
        android:visibility="invisible"
        android:alpha="0.8"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:scrollbars="vertical"
        app:cardCornerRadius="5dp"
        android:id="@+id/addNewCommentsDialog"
        app:cardElevation="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Add New Comment"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"
                    android:ems="12"
                    android:layout_column="0"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:text="SUBMIT"
                    android:id="@+id/commentSubmitButton"
                    android:textColor="@color/white"
                    android:ems="12"
                    android:layout_column="1"
                    android:background="@drawable/green_background_button"
                    android:layout_gravity="top|right"/>

                <ImageButton
                    android:layout_marginTop="25dp"
                    android:background="@drawable/textview_background"
                    android:id="@+id/exitDialogeBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/exit"
                    android:layout_gravity="top|right"
                    android:layout_column="2"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="0"
                    android:background="@android:color/darker_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="1"
                    android:background="@android:color/darker_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="2"
                    android:background="@android:color/darker_gray"/>
            </TableRow>

            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category*"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <Spinner
                    android:id="@+id/newCatSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:entries="@array/contractTypesEntries"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments*"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
            </TableRow>
            <EditText
                android:id="@+id/newCommentsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:ems="12"
                android:lines="5"
                android:background="@drawable/textview_background"
                android:layout_column="0"
                />
        </TableLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>