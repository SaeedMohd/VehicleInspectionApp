<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="com.inspection.fragments.FragmentARRAnnualVisitationRecords">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Visitation Records"
        android:textSize="18dp"
        android:textStyle="bold" />
    <!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/titleTextView"-->
    <!--android:paddingRight="10dp"-->
    <!--android:paddingLeft="10dp"-->
    <!--android:paddingBottom="10dp"-->
    <!--android:paddingTop="5dp"-->
    <!--android:background="@color/light_gray"-->
    <!--android:orientation="vertical">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/clubCodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="Club Code: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/clubCodeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/clubCodeTextView"
                android:ems="4"
                android:inputType="number"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/visitationfacilityIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/clubCodeEditText"
                android:text="Facility #:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/visitationfacilityIdVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/visitationfacilityIdTextView"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:ems="5"
                android:text="" />



            <LinearLayout
                android:layout_toRightOf="@id/visitationfacilityIdVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Specialist Name:"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/visitationSpecialistName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:hint="Select Specialist" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.25"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Facility Name:"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/facilityNameButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:hint="Select Facility" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/visitationMonthTextView"
                android:text="Month: "
                android:layout_toRightOf="@id/visitationfacilityIdVal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/visitationMonthsSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/visitationMonthTextView"
                android:layout_centerVertical="true"
                android:entries="@array/visitationMonthsFilter"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/visitationYearTextView"
                android:text="Year: "
                android:layout_toRightOf="@id/visitationMonthsSpinner"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/visitationYearFilterSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/visitationYearTextView"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/AnnualVisistationsCheckBox"
                android:text="Annual Visitations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginRight="10dp"
                />

            <CheckBox
                android:id="@+id/quarterlyOrOtherVisistationsCheckBox"
                android:text="Quarterly"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/adHocVisitationsCheckBox"
                android:text="Ad Hoc Visitations"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/deficienciesCheckBox"
                android:text="Deficiences"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>

            <CheckBox
                android:id="@+id/pendingCheckBox"
                android:text="Pending"
                android:layout_marginRight="10dp"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/completedCheckBox"
                android:text="Completed"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btns_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:weightSum="2">

            <Button
                android:id="@+id/showVisitationBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Visitations"
                android:visibility="invisible" />

            <Button
                android:id="@+id/newVisitationBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:text="New Visitation Form" />
        </LinearLayout>

        <ListView
            android:id="@+id/visitationfacilityListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--<ListView-->
        <!--android:id="@+id/visitationrecordsListView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:divider="@android:color/transparent"-->
        <!--android:dividerHeight="10dp"-->
        <!--android:layout_margin="10dp"-->
        <!--android:layout_height="400dp"/>-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btns_ll"
            android:background="@drawable/frame_solid_border"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/visitationrecordsLL"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>
    <!--</ScrollView>-->
</RelativeLayout>