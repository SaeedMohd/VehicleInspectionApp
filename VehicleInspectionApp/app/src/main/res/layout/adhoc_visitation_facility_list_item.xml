<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        tools:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/loadFacilityButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/green_background_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Load Facility"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/facilityNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Facility Name: "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@id/facilityNameValueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/facilityNameTextView" />


            <TextView
                android:id="@+id/facilityNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/facilityNameTextView"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="Facility Number"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/facilityNumberValueTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/facilityNameValueTextView"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/facilityNumberTextView" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>