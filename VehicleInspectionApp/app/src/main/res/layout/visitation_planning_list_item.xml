<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    >


        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:minHeight="100dp"
        tools:cardElevation="5dp"
        android:layout_margin="10dp"
        >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:rowCount="3"
                android:columnCount="6"
                android:padding="15dp">

                <TextView
                    android:id="@+id/facilityNoTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Facility Number:"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@color/black" />



                <TextView
                    android:id="@+id/facilityNoValueTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:text="test" />

                <TextView
                    android:id="@+id/facilityNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Facility Name:"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/facilityNameValueTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:layout_columnSpan="4"
                    android:textAlignment="center"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:layout_row="1"
                    android:text="test" />


                <TextView
                    android:id="@+id/initialContractDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:layout_gravity="fill"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    android:text="Initial Contract Date:"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_column="2"-->
                    <!--android:layout_row="2"-->
                    <!--android:layout_gravity="fill"-->
                    <!--android:layout_columnWeight="1"-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:ems="8"-->
                    <!--android:textStyle="bold"-->
                    <!--android:textColor="@color/black" />-->

                    <TextView
                        android:id="@+id/initialContractDateValueTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_row="2"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:text="" />


                    <TextView
                        android:id="@+id/visitationTypeTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Status / Type:"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:textStyle="bold"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/visitationTypeValueTextView"
                        android:layout_width="0dp"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:layout_gravity="fill"
                        android:layout_columnWeight="1"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="test" />



            </GridLayout>
            <Button
                android:id="@+id/loadBtn"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="Load Visitation"
                android:textColor="@color/white"
                android:layout_columnWeight="1"
                android:paddingRight="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/green_background_button"
                />

        </androidx.cardview.widget.CardView>

</RelativeLayout>