<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="com.inspection.fragments.FragmentARRAVFacility">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Defeciency"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/connumberll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/program_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Defeciency: "
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/deff_dropdown"
                    android:layout_width="0dp"
                    android:textColor="@color/blue_krayola"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/affliationdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/connumberll"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/visitationDateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Visitation Date: "
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/visitationDateBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/contract_number_textview"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="Select Date"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contypell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affliationdetails"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/clearedDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Cleared Date:"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/clearedDateBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:background="@null"
                    android:text="select date"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/AssignedToll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/officell"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/comments_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/officell"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Comments: "
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/comments_editTextVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/AssignedToll"
                android:layout_marginTop="10dp"
                android:lines="3"
                android:maxEms="250" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:text="I acknowledge all current deficiencies ..."
                android:textStyle="italic" />

            <TextView
                android:id="@+id/comments_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/officell"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Facility Representative's Signature: "
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <LinearLayout
                android:id="@+id/AssignedToll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/officell"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/date_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/officell"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Date: "
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/DateBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="select date"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>