<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="com.inspection.fragments.FragmentARRAVFacility">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="Defeciency"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">
            <TableLayout
                android:id="@+id/deficiencyTableLayout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <TableRow>
                    <TextView android:text="Deficiency"
                        android:layout_width="100dp"
                        android:gravity="center"

                        android:layout_column="0"
                        android:layout_weight="1"/>
                    <TextView android:text="Visitation Date"
                        android:layout_width="100dp"
                        android:gravity="center"

                        android:layout_column="1"
                        android:layout_weight="1"/>
                    <TextView android:text="Entered Date"
                        android:gravity="center"

                        android:layout_width="30dp"
                        android:layout_column="2"
                        android:layout_weight="1">
                    </TextView>
                    <TextView android:text="Cleared Date"
                        android:layout_width="30dp"
                        android:layout_column="3"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                    <TextView android:text="Comments"
                        android:layout_width="30dp"
                        android:layout_column="4"
                        android:gravity="center"
                        android:layout_weight="1">
                    </TextView>
                </TableRow>

            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affcomments_editTextVal"
                android:id="@+id/affbtnslayout"
                android:weightSum="3"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/defAddBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Add New Deficiency"/>
                <Button
                    android:id="@+id/affeditBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Modify"/>
                <Button
                    android:id="@+id/affdeleteBtn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Delete"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/connumberll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/program_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Defeciency: "
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/deff_dropdown"
                    android:layout_width="0dp"
                    android:textColor="@color/blue_krayola"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/affliationdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/connumberll"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/visitationDateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Visitation Date: "
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/visitationDateBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/contract_number_textview"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="Select Date"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contypell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affliationdetails"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/clearedDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Entered Date:"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/enteredDateBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:background="@null"
                    android:text="select date"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/AssignedToll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/officell"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/comments_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/officell"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Comments: "
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/comments_editTextVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/AssignedToll"
                android:layout_marginTop="10dp"
                android:lines="3"
                android:maxEms="250" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>