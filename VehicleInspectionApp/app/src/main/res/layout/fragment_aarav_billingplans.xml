<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/light_gray"
tools:context=".fragments.FragmentAARAVBillingPlans">


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="10dp"
    android:paddingTop="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing Method"
            android:textSize="18sp"
            android:textColor="@color/mainColor"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:id="@+id/achCheck"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_margin="5dp"
            android:text="ACH"
            android:textStyle="bold"
            />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Showing 1-1 of 1 Results"-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="16sp"-->
            <!--android:layout_margin="10dp"-->
            <!--android:textColor="#800000"-->
            <!--/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing Plan"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />

            <Button
                android:id="@+id/addNewPlanBtn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/green_background_button"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="+ ADD BILLING PLAN"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TableLayout
            android:id="@+id/billingPlansResultsTbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:stretchColumns="*">

            <TableRow android:background="@color/mainColor">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequency"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Effective Date"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiration Date"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Updated"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated By"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    />
            </TableRow>
        </TableLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/green_background_button"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/white"
                android:text="Save" />
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toLeftOf="@id/saveButton"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/grey_background_button"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:enabled="false"
                android:textColor="@color/white"
                android:text="Cancel" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>
    <View
        android:id="@+id/alphaBackgroundForDialogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/mainColor"
        android:visibility="gone"
        android:alpha="0.8"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cardCornerRadius="5dp"
        android:id="@+id/addNewPlanDialog"
        app:cardElevation="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Add New Billing Plan"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"
                    android:ems="12"
                    android:layout_column="0"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:text="SUBMIT"
                    android:id="@+id/planSubmitButton"
                    android:textColor="@color/white"
                    android:ems="12"
                    android:layout_column="1"
                    android:background="@drawable/green_background_button"
                    android:layout_gravity="top|right"/>
                <ImageButton
                    android:layout_marginTop="25dp"
                    android:id="@+id/exitDialogeBtn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/close"
                    android:layout_gravity="top|right"
                    android:layout_column="2"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="0"
                    android:background="@android:color/darker_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="1"
                    android:background="@android:color/darker_gray"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_column="2"
                    android:background="@android:color/darker_gray"/>
            </TableRow>

            <TableRow android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Effective Date*"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/newEffDateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_column="0"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:text="SELECT DATE"
                    android:ems="12"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category*"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name*"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:layout_column="1"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">
                <Spinner
                    android:id="@+id/newCatSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:entries="@array/contractTypesEntries"
                    />
                <Spinner
                    android:id="@+id/newTypeSpinnerCat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:entries="@array/contractTypesEntries"
                    />
                <Spinner
                    android:id="@+id/newTypeSpinnerCat2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:entries="@array/contractTypesEntries"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Min Bays"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Max Bays"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:layout_column="1"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/newMinBaysText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal"
                    android:ems="12"
                    android:background="@drawable/textview_background"
                    />
                <EditText
                    android:id="@+id/newMaxBaysText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:inputType="numberDecimal"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:background="@drawable/textview_background"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cost"
                    android:ems="12"
                    android:layout_marginRight="10dp"
                    android:layout_column="0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frequency*"
                    android:layout_marginLeft="10dp"
                    android:ems="12"
                    android:layout_column="1"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/newCostText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal"
                    android:ems="12"
                    android:background="@drawable/textview_background"
                    />
                <Spinner
                    android:id="@+id/newFreqSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_column="1"
                    android:layout_marginRight="10dp"
                    android:ems="12"
                    android:entries="@array/contractTypesEntries"
                    />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>