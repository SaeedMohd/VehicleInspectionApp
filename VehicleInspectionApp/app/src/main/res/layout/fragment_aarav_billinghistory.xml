<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/light_gray"
tools:context=".fragments.FragmentAARAVBillingHistory">

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/facBillHistory"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="left"
        android:layout_weight="8"
        android:text="Billing History"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        />
</LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/facBillHistory"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="10dp"
    android:paddingTop="5dp"
    android:background="@color/white"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing History"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textColor="#827908"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Showing 1-2 of 2 Results"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:textColor="#800000"
            />

        <TableLayout
            android:id="@+id/commentsResultsTbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:showDividers="middle|beginning|end"
            android:divider="@drawable/divider_table_layout"
            >
            <TableRow
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice #"
                    android:textStyle="bold"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Printed Record"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billing Month"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billing Due Date"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice Amount"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Amount"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Received Date"
                    android:textStyle="bold"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
</RelativeLayout>