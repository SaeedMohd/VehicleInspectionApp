<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/light_gray"
tools:context=".fragments.FragmentAARAVPhotos">


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:layout_margin="10dp"
    android:paddingTop="5dp"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:elevation="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:id="@+id/photosTitle"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@color/mainColor"
                />

            <Button
                android:background="@drawable/green_background_button"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Add New Photo"
                android:id="@+id/addNewPhoto"
                />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/photosTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle|beginning|end"
                android:divider="@drawable/divider_table_layout"
                android:layout_marginBottom="20dp"
                >
                <TableRow
                    android:background="@color/mainColor"
                    android:padding="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Thumbnail"
                        android:textStyle="bold"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="File Name"
                        android:textStyle="bold"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="File Description"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Update By"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Update Date"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Approval Requested"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Approved"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Approved By"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Approved Date"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        />


                </TableRow>
            </TableLayout>


    </LinearLayout>



</LinearLayout>


</ScrollView>

    <View
        android:id="@+id/photosLoadingView"
        android:alpha="0.8"
        android:background="@color/mainColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        />
    <RelativeLayout
        android:id="@+id/addNewPhotoDialog"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:visibility="gone"
        android:background="@color/white">
        <TableLayout
            android:id="@+id/newPhotoInputFieldsTableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TableRow>r
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="File Name:"
                    android:textStyle="bold"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    />
                <EditText
                    android:id="@+id/fileNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:layout_column="1"
                    android:ems="8"
                    android:background="@drawable/textview_background"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="File Description:"
                    android:textStyle="bold"
                    android:layout_column="4"
                    />
                <EditText
                    android:id="@+id/fileDescText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:ems="8"
                    android:layout_column="5"
                    android:background="@drawable/textview_background"
                    android:textStyle="bold"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_margin="5dp"
                    android:text="Last Update Date:"
                    android:layout_column="0"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/lastUpdateDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:layout_column="1"
                    android:background="@drawable/textview_background"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Last Updated By:"
                    android:textStyle="bold"
                    android:layout_column="4"
                    />
                <EditText
                    android:id="@+id/lastUpdatedByText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:ems="8"
                    android:layout_column="5"
                    android:background="@drawable/textview_background"
                    android:textStyle="bold"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_margin="5dp"
                    android:text="Last Approved Date:"
                    android:layout_column="0"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/lastApprovedDateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_column="1"
                    android:background="@color/transparent"
                    android:text="SELECT DATE"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Last Approved By:"
                    android:textStyle="bold"
                    android:layout_column="4"
                    />
                <EditText
                    android:id="@+id/lastApprovedByText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:ems="8"
                    android:layout_column="5"
                    android:background="@drawable/textview_background"
                    android:textStyle="bold"
                    />
            </TableRow>

            <TableRow>
            </TableRow>

            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:id="@+id/approvalReqCheck"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_margin="5dp"
                    android:text="Approval Requested"
                    android:textStyle="bold"
                    android:layout_column="0"
                    />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/approvedCheck"
                    android:layout_marginTop="5dp"
                    android:layout_margin="5dp"
                    android:text="Approved"
                    android:textStyle="bold"
                    android:layout_column="0"
                    />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/addNewPhotoConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/green_background_button"
            android:layout_below="@id/newPhotoInputFieldsTableLayout"
            android:textColor="@color/white"
            android:text="confirm"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_alignParentRight="true"
            />

        <Button
            android:id="@+id/addNewPhotoCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/green_background_button"
            android:layout_below="@id/newPhotoInputFieldsTableLayout"
            android:textColor="@color/white"
            android:text="Cancel"
            android:layout_toLeftOf="@id/addNewPhotoConfirmButton"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginRight="10dp"
            />


        <Button
            android:id="@+id/addNewPhotoCapturePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/green_background_button"
            android:layout_below="@id/newPhotoInputFieldsTableLayout"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:text="Capture Photo"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/addNewPhotoPickPhotoButton"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="30dp"
            android:background="@drawable/green_background_button"
            android:layout_below="@id/newPhotoInputFieldsTableLayout"
            android:textColor="@color/white"
            android:text="Pick Photo"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_toRightOf="@id/addNewPhotoCapturePhotoButton"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/photosPreviewDialog"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@color/light_gray"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/photosPreviewImageView"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="270dp"
            android:scaleType="fitXY"/>

        <Button
            android:id="@+id/photosPreviewDialogCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/green_background_button"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="close"
            android:layout_below="@id/photosPreviewImageView"

            />

    </RelativeLayout>
</RelativeLayout>