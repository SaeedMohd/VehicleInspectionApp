<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.inspection.fragments.AwardsAndDistinctionsFragment">

    <!-- TODO: Update blank fragment layout -->


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Awards And Distinctions"
                android:textColor="@color/mainColor"
                android:textSize="18sp" />

            <Button
                android:id="@+id/showAwardsCard"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/green_background_button"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="+ ADD Award And Distinction"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TableLayout
            android:id="@+id/mainAwardsTableLayout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_below="@+id/subTitleTextView"
            android:layout_height="wrap_content">


            <TableRow android:background="@color/mainColor">
                <TextView android:text="Award And Distinction"
                    android:layout_width="100dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_column="0"
                    android:layout_weight="1"/>
                <TextView android:text="Effective Date"
                    android:layout_width="100dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_column="1"
                    android:layout_weight="1"/>
                <TextView android:text="Expiration Date"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_width="30dp"
                    android:layout_column="2"
                    android:layout_weight="1">
                </TextView>
                <TextView android:text="Comments"
                    android:layout_width="30dp"
                    android:textColor="@color/white"
                    android:layout_column="3"
                    android:textAlignment="center"
                    android:layout_weight="1">
                </TextView>
                          </TableRow>

        </TableLayout>
        </LinearLayout>



    <View
        android:id="@+id/alphaBackgroundForAwardsAndDistinctionDialogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:visibility="gone"
        android:alpha="0.8"/>
    <android.support.v7.widget.CardView
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cardCornerRadius="5dp"
        android:id="@+id/awardsCard"
        app:cardElevation="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Add New Award And Distinction"
            android:layout_gravity="top|left"
            android:textSize="18dp"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:text="Submit"
            android:id="@+id/submitNewAward"
            android:textColor="@color/white"
            android:background="@drawable/green_background_button"
            />


        <ImageButton
            android:layout_marginTop="25dp"
            android:id="@+id/exitAwardsDialogeBtnId"
            android:layout_width="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"
            android:background="@drawable/close"
            android:layout_gravity="top|right"
            />


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/connumberll">
            <TextView
                android:id="@+id/Award_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Award And Distinction: "
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                />
            <Spinner
                android:id="@+id/AwardsAndDistinctions_textviewVal"
                android:layout_toRightOf="@id/contract_number_textview"
                android:layout_width="0dp"
                android:text="Select Award And Distinction"
                android:textColor="@color/blue_krayola"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@id/connumberll"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/contypell">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/connumberll"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Effective Date: "
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/afDtlseffective_date_textviewVal"
                android:layout_below="@id/connumberll"
                android:layout_width="0dp"
                android:text="select date"
                android:textColor="@color/blue_krayola"
                android:background="@null"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@id/contypell"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/officell">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/contypell"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Expiration Date: "
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/afDtlsexpiration_date_textviewVal"
                android:layout_toRightOf="@id/office_textview"
                android:layout_below="@id/contypell"
                android:layout_width="0dp"
                android:text="Select Date"
                android:textColor="@color/blue_krayola"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@id/officell"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/AssignedToll">
            <TextView
                android:id="@+id/comments_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/officell"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Comments: "
                android:textStyle="bold"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/affcomments_editTextVal"
            android:layout_marginTop="5dp"
            android:layout_below="@id/AssignedToll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_solid_border"
            android:maxEms="250"
            android:lines="3"
            />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/scopeOfServicesChangesDialogueLoadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:clickable="true"
        android:background="@color/mainColor"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBarRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:progressTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/progressBarRecords"
            android:layout_centerHorizontal="true"
            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>

