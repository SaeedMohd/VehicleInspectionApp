<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.FragmentAARAVBilling">

    <LinearLayout
        android:id="@+id/facilityGroupButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/generalInformationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Information"
            android:background="@color/transparent"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/rspButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="RSP"
            android:layout_marginLeft="10dp"
            />
    <Button
            android:id="@+id/personnelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Personnel"
            android:layout_marginLeft="10dp"
            />
    <Button
            android:id="@+id/amendmentOrderTrackingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="Amendment Order Tracking"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/facilityGroupDetailsFragment"
        android:layout_below="@id/facilityGroupButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>