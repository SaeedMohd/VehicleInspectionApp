<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.inspection.fragments.FragmentARRAVFacility">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:paddingTop="5dp"
                android:textAllCaps="true"
                android:text="Repair Shop Portal Tracking"
                android:textColor="@color/mainColor"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAR Addendum"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#827908"
                />





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repair Shop Portal Tracking"
                    android:gravity="center"
                    android:textColor="@color/mainColor"
                    android:textSize="22sp"
                    />

                <Button
                    android:background="@drawable/green_background_button"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="520dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Add new AAR Portal Tracking"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/addNewAarButton"
                    />
                <Button
                    android:background="@drawable/textview_background"
                    android:textColor="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentRight="true"
                    android:text="Hide"
                    android:id="@+id/hideBtnId"
                    />

            </RelativeLayout>



            <TableLayout
                android:id="@+id/aarPortalTrackingTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:showDividers="middle|beginning|end"
                android:divider="@drawable/divider_table_layout"
                >

                <TableRow
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Portal InspectionDate"
                        android:textStyle="bold"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logged Into Portal"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unknowledged Tows"
                        android:textStyle="bold"
                        android:layout_column="2"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Progress Tows"
                        android:textStyle="bold"
                        android:layout_column="3"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Progres Walk-ins"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_column="4"
                        />
                </TableRow>
            </TableLayout>



        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/alphaBackgroundForRSPDialogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:visibility="gone"
        android:alpha="0.8"/>
    <android.support.v7.widget.CardView
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:cardCornerRadius="5dp"
        android:id="@+id/addNewAAR_PortalTrackingCard"
        app:cardElevation="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="5dp"
            android:text="Add New AAR Portal Tracking"
            android:layout_gravity="top|left"
            android:textSize="18dp"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:text="Submit"
            android:id="@+id/submitNewAAR_PortalTracking"
            android:textColor="@color/white"
            android:background="@drawable/green_background_button"
            />


        <ImageButton
            android:layout_marginTop="25dp"
            android:background="@drawable/textview_background"
            android:id="@+id/exitRSPDialogeBtnId"
            android:layout_width="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="20dp"
            android:src="@drawable/exit"
            android:layout_gravity="top|right"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:weightSum="2"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/program_name_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Start Date: "
                        android:textStyle="bold" />
                <TextView
                        android:id="@+id/program_name_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="End Date: "
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_weight="1"
                        android:id="@+id/startDateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@color/transparent"
                        android:text="SELECT DATE"
                        android:textColor="@color/blue"
                        android:textSize="12dp" />
                    <Button
                        android:layout_weight="1"
                        android:id="@+id/endDateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginLeft="30dp"
                        android:background="@color/transparent"
                        android:text="SELECT DATE"
                        android:textColor="@color/blue"
                        android:textSize="12dp" />


                </LinearLayout>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Addendum Signed Date: "
                    android:layout_column="0"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/addendumSignedDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:background="@color/transparent"
                    android:text="Select Date"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/connumberll"
                        android:layout_gravity="center_vertical"
                        android:text="Number Of Cards Reader: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/numberOfCardsReaderEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/textview_background"
                        android:ems="2"
                        android:maxLength="2"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="00"
                        android:inputType="number"

                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Inspection Date: "
                    android:layout_column="0"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/inspectionDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:background="@color/transparent"
                    android:text="Select Date"
                    android:textColor="@color/blue"
                    android:textSize="12dp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:id="@+id/program_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logged Into RSP:  "
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/program_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_krayola"
                        android:text=" No "
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/loggedIntoRspButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/contract_number_textview"
                        android:textColor="@color/blue_krayola" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_krayola"
                        android:text=" Yes"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contypell"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/affliationdetails"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/effective_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/connumberll"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Number Of Unacknowledged Records: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/numberOfUnacknowledgedRecordsEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textview_background"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:inputType="number"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/contypell"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/affliationdetails"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/effective_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/connumberll"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Number Of In-Progress Two-Ins: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/numberOfInProgressTwoIns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textview_background"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:inputType="number"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contypell"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/affliationdetails"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/effective_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/connumberll"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="Number Of In-Progress Walk-Ins: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/numberOfInProgressWalkIns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/textview_background"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:inputType="number"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
