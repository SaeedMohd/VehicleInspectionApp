<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context="com.inspection.fragments.FragmentARRAVFacility">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:background="@color/light_gray"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:paddingTop="5dp"
                android:textAllCaps="true"
                android:text="Repair Shop Portal"
                android:textColor="@color/mainColor"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAR Addendum"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#827908"
                />




            <LinearLayout
                android:id="@+id/connumberll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/program_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Start Date: "
                    android:textStyle="bold" />

                    <Button
                    android:id="@+id/startDateButton"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="SELECT DATE"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/connumberll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/program_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="End Date: "
                    android:textStyle="bold" />

                    <Button
                    android:id="@+id/endDateButton"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="SELECT DATE"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/affliationdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/connumberll"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/program_name_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Addendum Signed Date: "
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addendumSignedDateButton"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/contract_number_textview"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="Select Date"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contypell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affliationdetails"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:text="Number Of Cards Reader: "
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/numberOfCardsReaderEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:ems="2"
                    android:maxLength="2"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="00"
                    android:inputType="number"

                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAR Portal Tracking"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:textColor="#827908"
                />


            <TableLayout
                android:id="@+id/aarPortalTrackingTableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:showDividers="middle|beginning|end"
                android:divider="@drawable/divider_table_layout"
                >

                <TableRow
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Portal InspectionDate"
                        android:textStyle="bold"
                        android:layout_column="0"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logged Into Portal"
                        android:textStyle="bold"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unknowledged Tows"
                        android:textStyle="bold"
                        android:layout_column="2"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Progress Tows"
                        android:textStyle="bold"
                        android:layout_column="3"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Progres Walk-ins"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_column="4"
                        />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/addNewAarButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Add new AAR Portal Tracking"
                />

            <LinearLayout
                android:id="@+id/affliationdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/connumberll"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/program_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Inspection Date: "
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/inspectionDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/contract_number_textview"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="Select Date"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/affliationdetails"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/connumberll"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/program_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Logged Into RSP: "
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/loggedIntoRspButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/contract_number_textview"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/blue_krayola" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contypell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affliationdetails"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/effective_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Number Of Unacknowledged Records: "
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/numberOfUnacknowledgedRecordsEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_background"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:inputType="number"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/contypell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affliationdetails"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/effective_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Number Of In-Progress Two-Ins: "
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/numberOfInProgressTwoIns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_background"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:inputType="number"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contypell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/affliationdetails"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/effective_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/connumberll"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Number Of In-Progress Walk-Ins: "
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/numberOfInProgressWalkIns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_background"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="0"
                    android:inputType="number"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/completeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>