<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/light_gray"
        tools:context=".fragments.FragmentAARAVBilling">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/facBilling"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="left"
                android:layout_weight="8"
                android:text="Billing"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                />
        </LinearLayout>
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facBilling"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:background="@color/white"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billing"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:textColor="#827908"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Showing 1-1 of 1 Results"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    android:textColor="#800000"
                    />
                <TableLayout
                    android:id="@+id/billingResultsTbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:showDividers="middle|beginning|end"
                    android:divider="@drawable/divider_table_layout"
                    >
                    <TableRow
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill ID"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frequency"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Revenue Source"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Printed Record"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Month"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Due Date"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Billing Amount"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Received Date"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            />
                    </TableRow>
                </TableLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Bill"
                    android:id="@+id/addNewBtn"
                    />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Bill ID:*"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newBillIDText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Revenue Source:*"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            />
                        <Spinner
                            android:id="@+id/newRevSourceSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ems="8"
                            android:layout_column="1"
                            android:entries="@array/contractTypesEntries"
                            />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Billing Month:*"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <Spinner
                            android:id="@+id/newBillMonthSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ems="8"
                            android:layout_column="1"
                            android:entries="@array/inspectionMonths"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Billing Due Date:*"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newBillDueDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="2nd Billing Due Date:"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            />

                        <EditText
                            android:id="@+id/newSecondDueDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Final Billing Due Date:"
                            android:layout_column="4"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newFinalDueDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="5"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="BillingAmount:*"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newBillingAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="ACH Discount Amount:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newACHDiscountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Date ACH File Sent To Cahier:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newACHDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Payment Received Date:*"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            />

                        <EditText
                            android:id="@+id/newPayRecDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Payment Amount:"
                            android:layout_column="4"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newPayAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="5"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Pending Amount:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newPendingAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Credit Amount Due:"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            />

                        <EditText
                            android:id="@+id/newCreditAmtDueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Credit Applied Date:"
                            android:layout_column="4"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newCreditAppliedDateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="5"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Credit Description:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newCreditDescText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:lines="5"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="On Payment Plan:"
                            android:textStyle="bold"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            />

                        <EditText
                            android:id="@+id/newOnPaymentPlanText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Number of Payments:"
                            android:layout_column="4"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newNoOfPaymentText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="5"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Payment Plan Amount Remaining:"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newCreditDescText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_margin="5dp"
                            android:text="Comments:*"
                            android:layout_column="0"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/newCommentsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text=""
                            android:ems="8"
                            android:lines="5"
                            android:layout_column="1"
                            android:background="@drawable/textview_background"
                            android:textStyle="bold"
                            />
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/saveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save" />

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </RelativeLayout>